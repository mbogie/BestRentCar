<aura:component description="BRCDivisionsList" controller="BRCDivisionController" implements="flexipage:availableForAllPageTypes" access="global">
    <aura:handler event="c:BRCGetDivisionsListEvent" action="{!c.handleBRCGetDivisionsListEvent}"/>
    <aura:attribute name="divisions" type="Account[]"/>
        <lightning:card title="Divisions List" class="slds-container--small">
        <div class="slds-p-left_medium slds-p-right_medium">
            <ul class="slds-list_vertical slds-has-dividers_top-space">
                <aura:if isTrue="{!not(empty(v.divisions))}">
                    <aura:iteration items="{!v.divisions}" var="item">
                        <li class="slds-list__item">
                            <c:BRCDivisionsListItem division="{!item}"/>
                        </li>
                    </aura:iteration>
                    <aura:set attribute="else">
                        <li class="slds-list__item">
                            <h3 class="slds-text-small slds-text-color_error">No Divisions to show.</h3>
                        </li>
                    </aura:set>
                </aura:if>
            </ul>
        </div>
    </lightning:card>
</aura:component>
