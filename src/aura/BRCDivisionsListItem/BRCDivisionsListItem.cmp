<aura:component description="BRCDivisionsListItem">
    <aura:registerEvent name="getDivisionDetail" type="c:BRCGetDivisionDetailEvent"/>
    <aura:registerEvent name="setMapMarker" type="c:BRCSetMapMarkerEvent"/>
    <aura:attribute name="division" type="Account"/>
    <lightning:recordViewForm aura:id="viewForm" recordId="{!v.division.Id}" objectApiName="Account">
        <div class="slds-media">
            <div class="slds-media__body">
                <lightning:layout class="slds-hint-parent">
                    <a onclick="{!c.selectRecord}">
                        <h3 class="slds-text-heading_small slds-m-bottom_xx-small">{!v.division.Name}</h3>
                    </a>
                </lightning:layout>
                <lightning:layout multipleRows="true">
                    <lightning:layoutItem>
                        <lightning:outputField fieldName="BillingCountry"/>
                    </lightning:layoutItem>
                    <lightning:layoutItem>
                        <lightning:outputField fieldName="BillingState"/>
                    </lightning:layoutItem>
                    <lightning:layoutItem>
                        <lightning:outputField fieldName="BillingCity"/>
                    </lightning:layoutItem>
                </lightning:layout>
            </div>
        </div>
    </lightning:recordViewForm>
</aura:component>
